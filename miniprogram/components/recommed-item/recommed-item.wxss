/* components/recommed-item/recommed-item.wxss */
.video-item{
  padding: 10px;
  box-sizing: border-box;
}
.video-item .image{
  width: 100%;
  height: 100px;
  border-radius: 4px;
}
.video-item .text{
  display: inline-block;
  width: 100%;
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.cover-image{
  position: relative;
  color: #fff;
  font-size: 10px;
}
.cover-image .play,
.cover-image .playTime{
  position: absolute;
  bottom: 8px;
}
.cover-image .play{
  left: 5px;
  display: flex;
  align-items: center;
}
.play .video-youtube{
  width: 17px;
  height: 14px;
  margin-right: 5px;
}
.cover-image .playTime{
  right: 5px;
}